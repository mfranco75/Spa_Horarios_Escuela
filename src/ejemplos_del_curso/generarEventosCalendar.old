import { startOfWeek, addDays, format } from "date-fns";


const generarEventosCalendar = ({horarios}) => {

    const getWeekDays = () => {
        // Obtenemos el lunes de la semana actual
        const start = startOfWeek(new Date(), { weekStartsOn: 1 }); // weekStartsOn: 1 indica que la semana empieza el lunes
      
        // Creamos un array con los días de lunes a sábado
        const days = Array.from({ length: 6 }, (_, index) =>
          addDays(start, index)
        )
      
        // Formateamos las fechas en el formato deseado (por ejemplo, "yyyy-MM-dd")
        return days.map((day) => format(day, "yyyy-MM-dd"))
    }
    const weekDays = getWeekDays()

    horarios.length > 0 &&
        horarios.map((dia) => {
            switch (horario.dia) {
                case 'LUNES':
                    horario.dia = weekDays[0]
                case 'MARTES':
                    horario.dia = weekDays[1]
                case 'MIÉRCOLES':
                    horario.dia = weekDays[2]
                case 'JUEVES':
                    horario.dia = weekDays[3]
    

            }
        })    

    return (horarios)
}

export default generarEventosCalendar